#include"Thread.h"
#include<iostream>
#include<mutex>
using namespace std;


mutex locker;

int main()
{
	Thread t1,t2,t3; //creating Thread objects


    locker.lock();
	t1.start();
	t2.start();
	t3.start();
	cout<<"started : "<<endl;
	locker.unlock();
//	this_thread::sleep_for(chrono::seconds(3));


	locker.lock();
	t1.detach();
	t2.detach();
	t3.detach();
	cout<<" Detached "<<endl;
	locker.unlock();
	this_thread::sleep_for(chrono::seconds(3));

	locker.lock();
	cout<<"stopping : "<<endl;
	t1.stop();
	t2.stop();
	t3.stop();
	locker.unlock();
	this_thread::sleep_for(chrono::seconds(3));

	return (0);
}
