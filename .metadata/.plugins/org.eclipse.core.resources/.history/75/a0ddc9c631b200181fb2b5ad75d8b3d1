#include<iostream>
#include<future>

using namespace std;

void sayHello(promise<string> prom)
{
	prom.set_val("Hello concurrency!");
}

int main()
{
	promise<string> promobj;

	future<string> futureobj = promobj.get_future();
	async(launch::async, sayHello, move(promobj));
	cout<<futureobj.get()<<endl;

	return 0;
}
