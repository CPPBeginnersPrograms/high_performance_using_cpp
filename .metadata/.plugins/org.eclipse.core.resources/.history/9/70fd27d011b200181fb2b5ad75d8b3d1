#ifndef THREAD_H_
#define THREAD_H_

#include<iostream>
#include<string>
#include<mutex>
#include<thread>

using namespace std;

enum ThreadType{
	READER, WRITER
};
class Thread {
private:
	thread *pthread;
	string name;
	ThreadType typeofthread;


public:
	Thread();
	~Thread();
};

#endif /* THREAD_H_ */
